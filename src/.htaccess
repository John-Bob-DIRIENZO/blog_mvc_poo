RewriteEngine On

RewriteCond %{REQUEST_FILENAME} !-f
# RewriteCond %{REQUEST_FILENAME} !-d

# REST API
RewriteRule ^api/([a-z0-9-]+)$ index.php?p=$1& [QSA]
RewriteRule ^api/([a-z0-9-]+)(/?)([0-9]*)$ index.php?p=$1&id=$3 [NC,L]

# FRONTEND
RewriteRule ^([a-z0-9-]+)(/?)([0-9]*)$ index.php?p=$1&id=$3 [NC,L]